<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">CAR Insurance Quote</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Signup", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="form-group col-md-5">
                        <input name="FirstName" type="text" class="form-control" placeholder="FirstName" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="LastName" type="text" class="form-control" placeholder="LastName" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="EmailAddress" type="email" class="form-control" placeholder="EmailAddress" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="DateOfBirth" type="date" class="form-control" placeholder="DateOfBirth" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="CarYear" type="number" class="form-control" placeholder="CarYear" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="CarMake" type="text" class="form-control" placeholder="CarMake" />

                    </div>
                    <div class="form-group col-md-5">
                        <input name="CarModel" type="text" class="form-control" placeholder="CarModel" />

                    </div>
                    <div class="form-group col-md-5" id="">
                        <div class="form-row mb-3">
                            <label>Any DUI?</label>
                            <select name="DUI" class="custom-select-lg text-center">
                                <option value="false" selected>No</option>
                                <option value="true">yes</option>
                            </select>
                        </div>
                       

                        <div class="form-row text-center mb-3">
                            <label>Number of Tickets</label>
                            <input name="SpeedingTickets" type="number" class="col-2" min="0" max="100" value="0"/>
                        </div>
                        <div class="form-row mb-3">
                            <label>Coverage Type Desired</label>
                            <select name="CoverageType" class="custom-select-lg text-center">
                                <option value="liability">Liability</option>
                                <option value="full">Full Coverage</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary">Submit</button>
                    </div>



                </div>
            }
        </div>
    </div>
</div>

